{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "command": "pip install -r requirements.txt"
  },
  "deploy": {
    "command": "bash start.sh",
    "healthcheck": {
      "path": "/api/health",
      "method": "GET",
      "interval": 15,
      "timeout": 5,
      "retries": 6
    },
    "startCommand": "bash start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}